<div class="col-md-6 col-sm-12 board-member-item">
    {% if content.field_image.0 %}
      {% set image = paragraph.field_image.entity.field_media_image.entity.fileuri|image_style('large') %}
      <figure class="img-brand mb-5">
        <img data-src="{{ image }}" src="{{ image }}" alt="Purpose" class="w-100 lazyloaded">
      </figure>
    {% endif %}
    <div class="text-content ">
      <span class="d-block h6 mb-0 fw-bold name">{{ content.field_title.0 }}</span>
      <article>
       {{ content.field_caption.0 }}
      </article>
    </div>
</div>
