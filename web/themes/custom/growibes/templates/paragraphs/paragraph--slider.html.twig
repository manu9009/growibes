                <div class="navigation focuses-navigation mt-5 mb-4 mb-md-0 d-flex align-items-center justify-content-center justify-content-md-start">
                <div class="swiper-button-prev  position-relative"><i class="d-flex mx-3"><svg class="icon-svg arrow-left"><use xlink:href="#arrow-left"></use></svg></i></div>
                <div class="swiper-button-next position-relative"><i class="d-flex mx-3"><svg class="icon-svg arrow-right"><use xlink:href="#arrow-right"></use></svg></i></div>
                </div>
            </div>
