<div class="{{ is_front ? 'homeProgramme g-padding-y2 pt-0' : 'g-padding-y' }}" {{ is_front ? "data-scroll-section" : '' }}>
    <div class="container-fluid ">
        <div class="row justify-content-between align-items-center boxContent left homefocuses">
            <div class="col-md-12 p-md-0">
                <div class="boxTitle">
                    <div class="focusesSliderWrap  h-100" data-scroll >
                        {{ content.field_content_slider }}
                    </div>

                    <div class="graphic speed-block" data-scroll data-scroll-speed="-1" >
                        <figure class="mb-0 image"  >
                        <img data-src="{{ base_url }}/{{ directory }}/images/aspire-dot-img-purple.svg" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" alt="ATRC" class="lazyload" />
                        </figure>
                    </div>

                </div>
