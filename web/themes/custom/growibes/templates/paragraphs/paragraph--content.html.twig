{% extends "paragraph.html.twig" %}

{%
   set card_attributes = create_attribute()
 %}
{%
  set card_classes = [
  'card',
  paragraph.field_card_style.value ? 'card--' ~ paragraph.field_card_style.value|clean_class,
  paragraph.field_image_direction.value ? paragraph.field_image_direction.value,
]
%}
{% block content %}
  <div class="container content" data-aos="fade-up" data-aos-duration="2000">
    <div {{ card_attributes.addClass(card_classes) }}>
      {% if content.field_image|render|striptags('img')|length > 0 %}
        <div class="card--img" data-aos="fade-up" data-aos-duration="2000" data-aos-delay="30">
          {{ content.field_image }}
        </div>
      {% endif %}
      {% if paragraph.field_show_title.value or content.field_content|render|striptags|trim is not empty or content.field_action_link|render|striptags|trim is not empty  %}
      <div class="card-body">
        {% if content.field_title|render|striptags|trim is not empty %}
          {% if paragraph.field_show_title.value %}
            <h2 class="header" data-aos="fade-up" data-aos-duration="2000">{{ content.field_title }}</h2>
          {% endif %}
        {% endif %}
        {% if content.field_content|render|striptags|trim is not empty  %}
          <div class="content-field " data-aos="fade-up" data-aos-duration="2000">
            {{ content.field_content }}
          </div>
        {% endif %}
        {% if content.field_action_link|render|striptags|trim is not empty %}
          <div class="text-center action-link">
            {{ content.field_action_link }}
          </div>
        {% endif %}
      </div>
      {% endif %}
    </div>
  </div>
{% endblock %}
