{%
set classes = [
'node',
'node--type-' ~ node.bundle|clean_class,
node.isPromoted() ? 'node--promoted',
node.isSticky() ? 'node--sticky',
not node.isPublished() ? 'node--unpublished',
view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
'clearfix',
]
%}

{% if  content.field_view_mode.0['#text']  == 'home' %}
  {% if content.field_header %}
    {{ content.field_header.0 }}
  {% endif %}
  {{ content.field_content }}
  {% if content.field_footer %}
    {{ content.field_footer }}
  {% endif %}
{% else %}


  {% if e_scroll_exist %}
    {% set border_class = '' %}
  {% else %}
    {% set border_class = 'border-bottom' %}
  {% endif %}
    <section class="inner-banner" data-scroll-section="">
    <div class="container">
      <div class="row">
        <div class="col-md-12 pt-5">
          <div class="section-details {{ border_class }} g-padding-y p-content">
            <div data-scroll>
              {% if content.field_lead_text|render|trim is not empty %}
                <span class="h1 mb-0 d-block fc-gray fw-bold">
                  {{ label.0 }}
                </span>
                <span class="h1 d-block  fw-bold">
                  {{ content.field_lead_text }}
                </span>
              {% else %}
                {% if language.getId() == 'ar' or language == 'ar' %}
                  <span class="banner-title-line">
                    <span class="title fw-bold">
                      {{ label.0 }}
                    </span>
                  </span>
                {% else %}
                  <span class="banner-title-line words chars splitting" data-splitting="" style="--word-total:2; --char-total:17;">
                    <span class="title fw-bold">
                      {{ label.0 }}
                    </span>
                  </span>
                {% endif %}
              {% endif %}

              {% if 'On' in content.field_show_backlink[0] %}
                <div class="col-md-12">
                  <div class="btn-group mt-2">
                    <a class="btn linked-black reversed" href="{{ content.field_backlink.0['#url'] }}">
                      <span>{{ content.field_backlink.0['#title'] }}</span><i><svg class="icon-svg arrow-left"><use xlink:href="#arrow-left"></use></svg></i>
                    </a>
                  </div>
                </div>
              {% endif %}
            </div>

            {% if language.getId() == 'ar' or language == 'ar' %}
              {% set sloganimage = "slogan-rotate-ar.svg" %}
            {% else %}
              {% set sloganimage = "slogan-rotate.svg" %}
            {% endif %}

            <div class="slogan" data-scroll="" data-scroll-position="top" data-scroll-speed="1.5">
              <img src="{{ base_url }}/{{ directory }}/images/{{ sloganimage }}" alt="">
            </div>
          </div>
          {{ block_tabs }}
        </div>
      </div>
    </div>

      <div class="graphic speed-block" data-scroll="" data-scroll-speed="-2" data-scroll-position="top">
      <figure class="mb-0 image" data-scroll="">

        <img data-src="{{ base_url }}/{{ directory }}/images/dotted_circle.svg" src="{{ base_url }}/{{ directory }}/images/dotted_circle.svg" alt="ATRC" class="lazyload">
      </figure>
    </div>
  </section>
  {% if content.field_header %}
    {{ content.field_header.0 }}
  {% endif %}

    <section class="inner-content" data-scroll-section="" data-scroll-section-inview="" >

    {% if content.field_content %}
      {{ content.field_content }}
    {% endif %}
  </section>
  {% if content.field_footer %}
      {{ content.field_footer }}
  {% endif %}
{% endif %}
