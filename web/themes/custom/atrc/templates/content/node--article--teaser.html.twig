<div class="itemNews row" data-scroll="">
    <div class="img_wrapper col-md-4 d-none d-md-block">
        <figure class="bg-silver mb-0">
            <img data-src="{{ file_url(node.field_image.entity.field_media_image.entity.fileuri| image_style('news')) }}" src="{{ file_url(node.field_image.entity.field_media_image.entity.fileuri| image_style('news')) }}" data-expand="-100" alt="" class="w-100 lazyloaded">
        </figure>
    </div>
    <div class="content col-md-8  ">
        <small class="d-block mb-3 border-top pt-3 fc-gray">{{ content.field_date }}</small>
        <a href="{{ url }}" class="h5 d-block fw-bold mb-3 t-link-dark">
            {{ node.label|length > 60 ? node.label| slice(0, 60) ~ '...' : node.label }}
        </a>

       {{ content.body|render|striptags|trim }}{{ '...' }}
       <a class="btn linked-blacked mt-3" href="{{ url }}">
         <span> Read more</span><i><svg class="icon-svg arrow-right"><use xlink:href="#arrow-right"></use></svg></i>
       </a>
    </div>
</div>
